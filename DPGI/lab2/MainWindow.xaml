<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>
    </Window.Resources>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="30">
        <Label Content="Label" HorizontalAlignment="Center"/>
        <StackPanel Margin="0 5 0 50">
            <TextBox Text="TextBox" Style="{StaticResource TextBoxStyle}" />
            <TextBox Text="TextBox" Style="{StaticResource TextBoxStyle}" />
            <TextBox Text="TextBox" Style="{StaticResource TextBoxStyle}" />
            <TextBox Text="TextBox" Style="{StaticResource TextBoxStyle}" />
        </StackPanel>
        <Button Content="Button" Width="200"></Button>
    </StackPanel>
</Window>
